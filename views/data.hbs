
<div class="container mt-5">
    <!-- Button trigger modal -->
<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
  Tambah Data
</button>
<span><b>Tambah Data API Pizza</b></span>
<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
          <form action="/data/tambah" method="post">
               <select class="form-select" name="kategori">
                   
        <option>- Pilih Menu -</option>
        <option value="pizza"> Pizza </option>
        <option value="pasta"> Pasta </option>
        <option value="nasi"> Nasi </option>
        <option value="minuman"> Minuman </option>

      </select>
        <div class="mt-2">
    <input type="text" class="form-control" name="nama" placeholder="Masukan Nama Sajian">
  </div>
  
        <div class="mt-2">
    <input type="text" class="form-control" name="deskripsi" placeholder="Masukan deskripsi">
  </div>
  
        <div class="mt-2">
    <input type="text" class="form-control" name="harga" placeholder="Masukan Harga">
  </div>
        <div class="mt-2">
    <input type="text" class="form-control" name="gambar" value="strawberry-milkshake.jpg">
  </div>
    
      <button type="submit" name="submit" class="btn btn-success">Kirim</button>
          </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div>
    </div>
  </div>
</div>


    <div class="row">
            <table class="table table-striped table-hover mt-3">
                 <thead>
    <tr>
      <th scope="col">Nama</th>
      <th scope="col">Kategori</th>
      <th scope="col">Harga</th>
      <th scope="col">Aksi</th>
    </tr>
  </thead>
  <tbody>
      {{#each coba}}
    <tr>
      <td>{{this.nama}}</td>
      <td>{{this.kategori}}</td>
      <td>Rp. {{this.harga}}</td>
      <td>
          <a href="/data/hapus/{{this.id}}" class="btn btn-danger">Hapus</a>
          <a href="/data/detail/{{this.id}}" class="btn btn-info">Detail</a>
          <a href="/data/update/{{this.id}}" class="btn btn-primary">Update</a>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
        </div>
</div>
